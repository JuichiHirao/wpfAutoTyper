<Window x:Class="wpfAutoTyper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfAutoTyper"
        mc:Ignorable="d"
        Title="F10 Timer" Height="224.264" Width="331.114">
    <Grid>
        <WrapPanel Orientation="Horizontal" Margin="15,20,5,5">
            <TextBox Name="txtIntervalHours" Text="0" Width="60" Height="50" Margin="5,5,5,5" FontSize="36"></TextBox>
            <TextBlock Text="時" FontSize="24" VerticalAlignment="Center"></TextBlock>
            <TextBox Name="txtIntervalMinutes" Text="0" Width="60" Height="50" Margin="5,5,5,5" FontSize="36"></TextBox>
            <TextBlock Text="分" FontSize="24" VerticalAlignment="Center"></TextBlock>
            <TextBox Name="txtIntervalSeconds" Text="15" Width="60" Height="50" Margin="5,5,5,5" FontSize="36"></TextBox>
            <TextBlock Text="秒" FontSize="24" VerticalAlignment="Center"></TextBlock>
        </WrapPanel>
        <Button Name="btnExecute"  Content="実行" Width="100" Height="50" Margin="5,50,5,5" Click="btnExecute_Click" />
    </Grid>
</Window>
